%article#activity
  %header
    %h2
      = @activity.name
    %p.meta
      = t("activities.organized_by", name: @activity.creator_name).html_safe

    = render "action", :activity => @activity, :type => @activity.relation_ship_with(current_user)

  %section.description
    .wrapper
      = @activity.description_markdown
      %h4
        = t("activities.required")
      = @activity.requirements_markdown

  %section.overview
    = render "activities/progress", activity: @activity
    %p
      = @activity.room_left
      %a.participants(href="#" title="")
        %span
          = t("activities.participants")

  %section.details
    %dl.wrapper
      - if @activity.anytime?
        %dt
          = t("activities.time_and_date")
        %dd
          = t("activities.anytime")
      - else
        %dt
          = t("activities.start.label_short")
        %dd
          = l(@activity.start_time, format: :nice_date)
        %dt
          = t("activities.end.label_short")
        %dd
          = l(@activity.end_time, format: :nice_date)
      %dt
        = t("activities.location")
      %dd
        = @activity.location
