.auth
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.error_notification

    .inputs
      = f.input :name, :required => true, :autofocus => true
      = f.input :email, :required => true

      - if @user.password_required?
        = f.input :password, :required => true
        = f.input :password_confirmation, :required => true

    .actions
      = f.button :submit, "Sign up", :class => 'btn btn-success'

  = link_to "Sign in with Github", "/auth/github", class: "btn-auth btn-github  large"
  = link_to "Sign in with Twitter", "/auth/twitter", class: "btn-auth btn-twitter  large"

%p.hint
  Have an account already?
  = link_to 'sign in with password', new_session_path(:user)

