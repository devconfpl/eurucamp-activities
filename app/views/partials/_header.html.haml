%header#header

  -# user navigation, don't show unless logged-in
  %nav.user-nav
    %ul
      %li
        %a(href="#" title="#{t("user_nav.account.title")}")
          = t("user_nav.account.label")
      %li
        %a(href="#" title="#{t("user_nav.logout.title")}")
          = t("user_nav.logout.label")

  -# the logo, link home
  %h1
    = link_to "/" do
      = image_tag "header/logo_small.png", :alt => "Eurucamp Activities"
